    <style>
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
            cursor: pointer;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-body {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
        }

        .iconBx {
            background-color: #007bff;
            color: #fff;
            border-radius: 50%;
            padding: 15px;
            margin-left: 15px;
        }

        .card-title {
            color: #333;
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .numbers {
            font-size: 1.5rem;
            color: #007bff;
            margin-bottom: 0;
        }

    .notice-board {
      
            padding: 15px;
            background-color:  #dc3545; 
            color: #fff; 
            border: 1px solid  #dc3545; 
            border-radius: 8px; 
            margin-bottom: 0;

        }

        .notice-heading {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .notice-board-body {
            background-color: #fff;
            color: #000;
            padding: 15px;
            border-radius: 8px; /* Added border-radius for a rounded appearance */
        }
    </style>
</head>

<body>


    <div class="wrapper">
        {{>usersidebar user = user }}
        <div class="content">
            {{#isEqual user.pkg "none"}}
            <div class="alert alert-danger" role="alert">
                You need to Activate a Package! Please Activate a <a href="/packages" style="color: #007bff;">subscription.</a>
            </div>
            {{/isEqual}}

            {{#isEqual user.pkg "expired"}}
            <div class="alert alert-danger" role="alert">
                Your package has expired. Please renew your <a href="/packages"  style="color: #007bff;">subscription.</a>
            </div>
            {{/isEqual}}

            <div class="row mt-4">


                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">User Name</h5>
                                <p class="card-text numbers">{{user.name}}</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="person" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Current Usage</h5>
                                <p class="card-text numbers">{{user.lastmonthusage}} GB</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="bar-chart" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Total Usage</h5>
                                <p class="card-text numbers">{{user.totalusage}} GB</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="analytics" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Wallet</h5>
                                <p class="card-text numbers">Rs{{user.wallet}}</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="wallet" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Total Deposit</h5>
                                <p class="card-text numbers">Rs{{user.deposit}}</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="cash" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Pending Deposit</h5>
                                <p class="card-text numbers">Rs{{user.pending}}</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="hourglass" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Total Bill</h5>
                                <p class="card-text numbers">Rs{{user.totalbill}}</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="receipt" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Remaining Bill</h5>
                                <p class="card-text numbers">Rs{{user.remainingbill}}</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="receipt" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">Paid Bill</h5>
                                <p class="card-text numbers">Rs{{user.paid}}</p>
                            </div>
                            <div class="iconBx">
                                <ion-icon name="checkmark-done" class="display-4"></ion-icon>
                            </div>
                        </div>
                    </div>
                </div>




                <!-- Add more cards here -->

            </div>
            <!-- Notice Board -->
            <div id="noticeBoard" class="alert alert-danger notice-board" role="alert">
                <div class="notice-heading">Notice</div>
                <div class="notice-board-body">
                    {{data.notice}}
                </div>
            </div>
             </main>
           
        </div>
    <footer class="container-fluid text-left bg-white text-dark py-4">
