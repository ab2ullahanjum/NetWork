<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">

    <title>{{data.fdata.sitename}} | All Users</title>
    <link href="static/assets/vendor/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="static/assets/vendor/fontawesome/css/solid.min.css" rel="stylesheet">
    <link href="static/assets/vendor/fontawesome/css/brands.min.css" rel="stylesheet">
    <link href="static/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="static/assets/css/master.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include toastr -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>






    {{>favicon data = data.fdata}}
    <style>
        .clickable-row:hover {
            background-color: #dcdcdc;
            /* Add your preferred background color for hover effect */
            cursor: pointer;
        }

        .loading-blur {
            filter: blur(0.1px);
            /* Adjust the blur amount as needed */
        }
    </style>
</head>

<body>

    <div class="wrapper">
        {{>usersidebar data = data.fdata}}
        <div class="content">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Method</th>
                                        <th>Trx ID</th>
                                        <th>Deposit Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data.depositrequests}}
                                    <tr class="clickable-row" data-bs-toggle="modal" data-bs-target="#myModal"
                                        data-depositamount="{{this.depositAmount}}"
                                        data-methodname="{{this.methodName}}"
                                        data-accountnumber="{{this.accountNumber}}"
                                        data-accountholder="{{this.accountHolder}}" data-trxid="{{this.trxId}}"
                                        data-imageupload="{{this.imageUpload}}">
                                        <td>{{this.methodName}}</td>
                                        <td>{{this.trxId}}</td>
                                        <td>{{this.depositAmount}}</td>
                                        <td class="text-white bg-warning mb-3">
                                            <div class="card-header">Pending</div>

                        </div>
                        </td>
                        </tr>

                        {{/each}}
                        </tbody>
                        </table>
                        <div class="modal fade spinner-container" id="myModal" tabindex="-1" role="dialog"
                            aria-labelledby="myModalLabel">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myModalLabel">Deposit Details</h4>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <!-- Display the image -->
                                                <img src="" id="modal-image" class="img-fluid rounded"
                                                    alt="Deposit Image">
                                            </div>
                                            <div class="col-md-6">
                                                <p><strong>Deposit Amount:</strong> <span
                                                        id="modal-depositamount"></span></p>
                                                <p><strong>Payment Method:</strong> <span id="modal-methodname"></span>
                                                </p>
                                                <p><strong>Account Number:</strong> <span
                                                        id="modal-accountnumber"></span></p>
                                                <p><strong>Account Holder:</strong> <span
                                                        id="modal-accountholder"></span></p>
                                                <p><strong>Transaction ID:</strong> <span id="modal-trxid"></span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-bs-dismiss="modal"
                                            aria-label="Close">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="static/assets/js/script.js"></script>

    <script>
        $(document).ready(function () {
            // Handle click event on tr elements with the class "clickable-row"
            $('.clickable-row').click(function () {
                // Retrieve data attributes from the clicked row

                depositamount = $(this).data('depositamount');
                methodname = $(this).data('methodname');
                accountnumber = $(this).data('accountnumber');
                accountholder = $(this).data('accountholder');
                trxid = $(this).data('trxid');
                imageupload = $(this).data('imageupload');
                $('#modal-depositamount').text(depositamount);
                $('#modal-methodname').text(methodname);
                $('#modal-accountnumber').text(accountnumber);
                $('#modal-accountholder').text(accountholder);
                $('#modal-trxid').text(trxid);

                // Update the image source
                $('#modal-image').attr('src', imageupload);
            });
        });

    </script>
    <!-- Spin.js library -->

</body>

</html>